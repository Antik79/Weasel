{
  "WeaselHost": {
    "WebServer": {
      "Port": 7780,
      "Host": "0.0.0.0",
      "AllowRemote": true,
      "UseHttps": false
    },
    "Security": {
      "RequireAuthentication": false,
      "Password": null,
      "EnableCsrfProtection": true,
      "EnableRequestLogging": true,
      "EnableRateLimiting": true,
      "RequestsPerMinute": 180,
      "QueueLimit": 25
    },
    "Capture": {
      "Folder": "%APPDATA%\\\\Weasel\\\\Screenshots",
      "FileNamePattern": "yyyyMMdd_HHmmss"
    },
    "Logging": {
      "Folder": "%APPDATA%\\\\Weasel\\\\Logs",
      "RetentionDays": 14,
      "MinimumLevel": "Information"
    },
    "Smtp": {
      "Host": "smtp.gmail.com",
      "Port": 587,
      "EnableSsl": true,
      "Username": null,
      "Password": null,
      "FromAddress": null,
      "FromName": "Weasel Disk Monitor"
    },
    "DiskMonitoring": {
      "Enabled": false,
      "CheckIntervalMinutes": 15,
      "ThresholdPercent": 10,
      "MonitoredDrives": [],
      "NotificationRecipients": []
    }
  }
}


